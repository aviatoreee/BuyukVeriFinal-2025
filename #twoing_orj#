# src/classifiers/twoing.py
from sklearn.tree import DecisionTreeClassifier
from .base_classifier import BaseClassifier

class TwoingClassifier(BaseClassifier):
    def __init__(self):
        # Scikit-learn'de doğrudan 'Twoing' için kriter bulunamamıştır.

        self.model = DecisionTreeClassifier(criterion='gini', splitter='random', random_state=42)

    def train(self, X_train, y_train):
        self.model.fit(X_train, y_train)

    def predict(self, X_test):
        return self.model.predict(X_test)

    def get_name(self):
        return "Twoing (Simulated)"
